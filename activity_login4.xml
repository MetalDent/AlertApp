<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/road_map_vector"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/useridtxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="USER ID :"
        android:background="#fff"
        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_toRightOf="@id/useridtxt"
        android:padding="10dp"
        android:background="#fff"
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="200dp"

        android:orientation="vertical"
        >
    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginBottom="25dp"
        android:id="@+id/view_signal"
        android:text="VIEW TRAFFIC SIGNALS"/>

        <Button
            android:layout_marginBottom="25dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:id="@+id/near_by_help"
            android:text="NEAR BY HELPS"/>
        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginBottom="25dp"
            android:id="@+id/near_by_food"
            android:text="NEAR BY FOOD COURTS"/>
        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="#fff"
            android:id="@+id/shortest_path"
            android:text="SHORTEST PATH"/>
        <Button
            android:layout_width="170dp"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:id="@+id/add_event"
            android:text="ADD EVENT"/>
    </LinearLayout>


</RelativeLayout>